</head>
<body>
{{>components/header}}

<!-- Login Box -->
<section class="login_section" class="h-[1000px] w-[100%]">
    <div class="con">
        <div class="login_header mb-[5px]">&nbsp;LOGIN</div>
        <div class="box_wrap">
            <div class="left">

                <div class="login_form">
                    <label class="username block" for="username">Email Address</label>
                    <input id="login_username" type="text" name="username" placeholder="Username"> <br>
                    <label class="password block" for="password">Password</label>
                    <input id="login_password" type="text" name="password" placeholder="Password"> <br>
                    <input type="checkbox" id="rememberMe" value="isRememberMe"> <label for="rememberMe"></label>
                    <label class="remember_me_word" for="rememberMe">&nbsp; Remember me</label>
                    <div class="login_btn_wrap flex">
                        <button class="login_btn block ">Log In</button>
                        <a class="forget_password" href="#">
                            Forget Password?
                        </a>
                    </div>
                </div>

            </div>
            <div class="right">
                <h1>New Customer?</h1>
                <p>Creating an account is Quick and Easy</p>
                <div class="btn_wrap">
                    <a class="create_account inline-block" href="/page/join">Create Account</a>
                    <a class="google_login inline-block" href="/oauth2/authorization/google">
                        Login with Google &nbsp;<i class="fa-brands fa-google"></i></a>
                </div>

                <div class="line h-[1px] bg-black w-[100%] mt-[20px] mb-[10px]"></div>
                <p>Login with Google will automatically process registration!</p>
            </div>
        </div>
    </div>
</section>
<!-- Login Box -->


{{>components/footer}}

<script src="/js/loginPage.js"></script>
<script src="/js/mainPage.js"></script>
<script src="/bootstrapJS_v5/bootstrap.bundle.js"></script>
<script src="/bootstrapJS_v5/bootstrap.bundle.min.js"></script>
</body>
</html>